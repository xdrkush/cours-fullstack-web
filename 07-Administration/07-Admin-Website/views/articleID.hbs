    <h3>Ajouter un commentaire</h3>
    <form class="column middle" action="/article/createCommentary" method="post"
        enctype="application/x-www-form-urlencoded">
        <div class="flx">
            {{!-- <input type="text" class="form-control itm bdr-radius" name="author"/> --}}
