<div class="cont">
    <h1>Commentaire</h1>

    {{#each dbCommentary }}
    <div class="flx">
        <div class="column">
            <img class="itm img100" src="{{ imgAuthor }}" alt="">
        </div>
        <div>
            <div class="flx">
                <p class="itm">De : {{ author }}</p>
                <p class="itm">Le : {{ createDate }}</p>
                <p class="itm">Ref : {{ articleID }}</p>
            </div>
            <p class="itm">{{ message }}</p>
            <div class="flx">
                <a class="btn-primary bdr-radius" href="/article/delCommentary/{{_id}}">
                    Supprimer
                </a>
            </div>
        </div>
    </div>
    {{/each }}

</div>

